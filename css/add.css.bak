html, body {
      height: 100%;
      }
      form, input, select { 
      padding: 0;
      margin: 5px;
      outline: none;
      font-family: Roboto, Arial, sans-serif;
      font-size: 14px;
      color: #fff;
      line-height: 22px;
	  
      }
      
      h1 {
      margin: 15px 0 4px;
      font-weight: 400;
      }
      h4 {
      margin: 20px 0 4px;
      font-weight: 400;
      }
    /*  span {
      color: red;
      }*/
      .testbox {
	  margin-top:8%;
      display: flex;
	  margin-right:10%;
      align-items: center;
      /*height: inherit;*/
      padding: 3px;
	  margin-left:30%;
      position:relative;
      }
      form {
	margin-top:8%;
      width: 100%;
      padding: 40px;
      background: #12192C;
      box-shadow: 0 2px 5px #ccc;
	  border-radius:5px;	  
      }
      input {
      width: calc(100% - 1px);
      padding: 10px;
	  margin-left:3px;
      border: 1px solid #ccc;
      border-radius: 3px;
      vertical-align: middle;
	  color:black;
      }
      input:hover, select:hover {
      outline: none;
      border: 1px solid #095484;
      background: #e6eef7;
	  color:black;
      }
      .title-block select, .title-block input {
      margin-bottom: 10px;
      }
      select {
      padding: 7px 0;
      border-radius: 3px;
      border: 1px solid #ccc;
      background: #fff;
	  color:black;
      }
      select, table {
      width: 100%;
      }
      option {
      background: #fff;
	    color:black;
      }           
      .btn-block {
      margin-top: 20px;
      text-align: center;
      }
      button {
      width: 150px;
      padding: 10px;
      border: none;
      -webkit-border-radius: 5px; 
      -moz-border-radius: 5px; 
      border-radius: 5px; 
      background-color: crimson;
      font-size: 16px;
      color: #fff;
      cursor: pointer;
      }
